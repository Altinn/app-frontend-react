{
  "$id": "https://altinncdn.no/schemas/json/layout/layout.schema.v2.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Altinn layout",
  "description": "Schema that describes the layout configuration for Altinn applications.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "data": {
      "$ref": "#/$defs/data"
    }
  },
  "$defs": {
    "data": {
      "title": "The layout data",
      "description": "Contains data describing the layout configuration.",
      "type": "object",
      "properties": {
        "layout": {
          "$ref": "#/$defs/layout"
        }
      }
    },
    "layout": {
      "title": "The layout",
      "description": "Array of components to be presented in the layout.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/component"
      }
    },
    "component": {
      "oneOf": [
        {
          "$ref": "../component/ActionButton.schema.v1.json"
        },
        {
          "$ref": "../component/AddressComponent.schema.v1.json"
        },
        {
          "$ref": "../component/AttachmentList.schema.v1.json"
        },
        {
          "$ref": "../component/Button.schema.v1.json"
        },
        {
          "$ref": "../component/ButtonGroup.schema.v1.json"
        },
        {
          "$ref": "../component/Checkboxes.schema.v1.json"
        },
        {
          "$ref": "../component/Custom.schema.v1.json"
        },
        {
          "$ref": "../component/Datepicker.schema.v1.json"
        },
        {
          "$ref": "../component/Dropdown.schema.v1.json"
        },
        {
          "$ref": "../component/FileUpload.schema.v1.json"
        },
        {
          "$ref": "../component/FileUploadWithTag.schema.v1.json"
        },
        {
          "$ref": "../component/Grid.schema.v1.json"
        },
        {
          "$ref": "../component/Group.schema.v1.json"
        },
        {
          "$ref": "../component/Header.schema.v1.json"
        },
        {
          "$ref": "../component/IFrame.schema.v1.json"
        },
        {
          "$ref": "../component/Image.schema.v1.json"
        },
        {
          "$ref": "../component/Input.schema.v1.json"
        },
        {
          "$ref": "../component/InstanceInformation.schema.v1.json"
        },
        {
          "$ref": "../component/InstantiationButton.schema.v1.json"
        },
        {
          "$ref": "../component/Likert.schema.v1.json"
        },
        {
          "$ref": "../component/Link.schema.v1.json"
        },
        {
          "$ref": "../component/List.schema.v1.json"
        },
        {
          "$ref": "../component/Map.schema.v1.json"
        },
        {
          "$ref": "../component/MultipleSelect.schema.v1.json"
        },
        {
          "$ref": "../component/NavigationBar.schema.v1.json"
        },
        {
          "$ref": "../component/NavigationButtons.schema.v1.json"
        },
        {
          "$ref": "../component/Panel.schema.v1.json"
        },
        {
          "$ref": "../component/Paragraph.schema.v1.json"
        },
        {
          "$ref": "../component/PrintButton.schema.v1.json"
        },
        {
          "$ref": "../component/RadioButtons.schema.v1.json"
        },
        {
          "$ref": "../component/Summary.schema.v1.json"
        },
        {
          "$ref": "../component/TextArea.schema.v1.json"
        }
      ]
    }
  }
}
